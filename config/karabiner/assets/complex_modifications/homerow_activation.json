{
  "title": "Homerow Activation",
  "rules": [

    {
      "description": "j+k to homerow",
      "manipulators": [
        {
          "from": {
            "modifiers": {
              "optional": [
                "any"
              ]
            },
            "simultaneous": [
              {
                "key_code": "j"
              },
              {
                "key_code": "k"
              }
            ],
            "simultaneous_options": {
              "detect_key_down_uninterruptedly": true,
              "key_down_order": "insensitive",
              "key_up_order": "insensitive",
              "key_up_when": "any"
            }
          },
          "to": [
            {
              "key_code": "spacebar",
              "modifiers": [
                "left_control",
                "left_option",
                "left_command"
              ]
            }
          ],
          "type": "basic"
        }
      ]
    }
  ]
}
